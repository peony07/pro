<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
 <parent>  
  	<groupId>com.sc.project</groupId>
  	<artifactId>pro-parent</artifactId>
	<version>1.0.0-SNAPSHOT</version>
   </parent>
  
  <modelVersion>4.0.0</modelVersion>
  <artifactId>pro-rest-service</artifactId>
  <packaging>war</packaging>
  <name>pro-rest-service</name>
  <description>项目描述</description>
	<dependencies>
      <!--依赖其他子项目-->
      
   		<dependency>
		  <groupId>com.sc.project</groupId>
		  <artifactId>pro-common</artifactId>
		</dependency>
		
		<dependency>
		  <groupId>com.sc.project</groupId>
		  <artifactId>pro-api</artifactId>
		</dependency>
		
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-web</artifactId>
		</dependency>

		<!-- Jersey -->
		<dependency>
			<groupId>org.glassfish.jersey.ext</groupId>
			<artifactId>jersey-spring3</artifactId>
			<exclusions>
				<exclusion>
					<groupId>org.springframework</groupId>
					<artifactId>spring-core</artifactId>
				</exclusion>
				<exclusion>
					<groupId>org.springframework</groupId>
					<artifactId>spring-web</artifactId>
				</exclusion>
				<exclusion>
					<groupId>org.springframework</groupId>
					<artifactId>spring-beans</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>org.glassfish.jersey.media</groupId>
			<artifactId>jersey-media-json-jackson</artifactId>
		</dependency>
		
        <dependency>
             <groupId>com.alibaba</groupId>
             <artifactId>dubbo</artifactId>
             <exclusions>
				<exclusion>
					<groupId>org.springframework</groupId>
					<artifactId>spring</artifactId>
				</exclusion>
			</exclusions>
         </dependency>
          
          <dependency>
              <groupId>org.apache.zookeeper</groupId>
              <artifactId>zookeeper</artifactId>
          </dependency>

           <dependency>
               <groupId>com.github.sgroschupf</groupId>
               <artifactId>zkclient</artifactId>
           </dependency>
  </dependencies>
     
  
    <build>
  	<finalName>pro-rest-service</finalName>
  	<plugins>
  	 	<plugin>
          <groupId>org.apache.tomcat.maven</groupId>
          <artifactId>tomcat7-maven-plugin</artifactId>
          <version>2.2</version>
          <executions>
				<execution>
					<phase>package</phase>
					<goals>
						<goal>run</goal>
					</goals>
				</execution>          
          </executions>
          <configuration>
          	<server>tomcat.server.rest</server>
          	<charset>${project.build.sourceEncoding}</charset>
          	<port>8009</port>
          	<path>/restservice</path>
          	<uriEncoding>${project.build.sourceEncoding}</uriEncoding>
          </configuration>
        </plugin>
  	</plugins>
  </build>
  
    
</project>
